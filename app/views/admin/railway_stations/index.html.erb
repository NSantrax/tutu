<h1>Список станций</h1>

<table class="table table-striped  text-dark bg-light">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railway_stations.each do |railway_station| %>
     <tr>
      <td>
       
      <%= railway_station.title %>
      <div {id="railway_station_title_<%= railway_station.id %>"}>
      <%= render 'form', station: railway_station, hidden: true %>
      </div>
       </td>
       <td><%= link_to t('common.show'), [:admin, railway_station ] %></td>
       <td><%= link_to t('common.edit'), '', class: 'edit_station', data: { station_id: railway_station.id } %></td>
       <td><%= link_to t('common.delete'), [:admin, railway_station], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать станцию', new_admin_railway_station_path %>

