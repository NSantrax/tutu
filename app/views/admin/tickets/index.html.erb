<p id="notice"><%= notice %></p>

<h1>Список билетов</h1>

<table class="table table-striped  text-dark" style="background-color:#00FFFF">
  <thead>
    <tr>
      <th><%= t('.number') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.id %></td>
        <td><%= link_to t('common.show'), [:admin, ticket] %></td>
        <td><%= link_to t('common.edit'), edit_admin_ticket_path(ticket) %></td>
        <td><%= link_to t('common.delete'), [:admin, ticket], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить билет', search_path %>
