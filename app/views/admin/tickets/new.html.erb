<h1>Добавить билет</h1>

<%= @train%>
<%= form_with(model: [:admin, @ticket], local: true) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
   <% end %>


<p>
Укажите свои данные:
  <div class="field">
    <%= f.label "Фамилия" %>
    <%= f.text_field :second_name, id: :ticket_second_name %>
    <%= f.label "Имя" %>
    <%= f.text_field :first_name, id: :ticket_first_name %>
    <%= f.label "Отчество" %>
    <%= f.text_field :middle_name, id: :ticket_middle_name %>
    <%= f.label "Номер паспорта" %>
    <%= f.number_field :passport_number, id: :ticket_passport_number %>
    <%= f.label :user, 'Выбрать пользователя' %>
    <%= f.collection_select :user_id, User.all, :id, :email %>
    
   <%= f.hidden_field :train_id, value: params[:train_id] %>
   <%= f.hidden_field :base_station_id, value: params[:base_station_id] %>
   <%= f.hidden_field :end_station_id, value: params[:end_station_id] %>
   

  </div>
</p>

  
  <div class="actions">
    <%= f.submit 'Создать' %>
  </div>
<% end %>

   
