<p id="notice"><%= notice %></p>

<h1>Список маршрутов</h1>

<table class="table table-striped text-dark bg-light">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @routes.each do |route| %> 
      <tr>
        <td>
        <div id="route_name_<%= route.id %>">
         <%= route.name  %>
        </div>
             <%= render 'form', route: route,  hidden: true %>
           
        </td>
            <td><%= link_to t('common.show'), [:admin, route] %></td>
            <td><%= link_to t('common.edit'), '', class: 'edit_route', data: { route_id: route.id }%></td>
            <td><%= link_to t('common.delete'), [:admin, route], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить маршрут', new_admin_route_path %>

