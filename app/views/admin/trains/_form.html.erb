<%= form_for [:admin, train], html: { style: "display: #{ hidden ? 'none' : 'block'}"}  do |form| %>
  <%= render 'common/errors', resourse: train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.number_field :number, id: :train_number %>
  </div>
 <p>
   <div class="field">
     <%= form.label :sort_wagons %>
     <%= form.radio_button(:sort_wagons, true) %>
     <%= label_tag(:sort_wagons, "С головы поезда") %>
     <%= form.radio_button(:sort_wagons, false ) %>
     <%= label_tag(:sort_wagons, "С хвоста поезда") %>
   </div>
 </p>
 <p>
  <div class="field">
    <%= form.label :current_station %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title, include_blank: true %>
  </div>
 </p>
 <p>
  <div class="field">
    <%= form.label :route %>
    <%= form.collection_select :route_id, Route.all, :id, :name, include_blank: true %>
  </div>
</p>
<p>
  <div class="actions">
    <%= form.submit %>
  </div>
</p>
<% end %>
