<p id="notice"><%= notice %></p>

<h1>Список поездов</h1>

<table class="table table-striped text-dark " href="app/assets/stylesheets/style.css" >
  <thead>
    <tr>
      <th>Номер</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %> 
      <tr>
        <td><%= train.number %>
           <div {id="train_number_<%= train.id %>"}>
             <%= render 'form', train: train, hidden: true %>
           </div>
        </td>
            <td><%= link_to t('common.show'), [:admin, train] %></td>
            <td><%= link_to t('common.edit'), '', class: 'edit_train', data: { train_id: train.id }%></td>
            <td><%= link_to t('common.delete'), [:admin, train], method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        
      </tr>
     <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Создать поезд', new_admin_train_path %>


