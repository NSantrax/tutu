  <%= form_with(model: wagon.becomes(Wagon), local: true) do |form| %>
  <%= render 'common/errors', resourse: wagon %>
   

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field  :number, id: :wagon_number %>
  </div>

  <% Wagon::PLACE.each do |place| %>  
  <div class="field">
    <%= form.label place %>
    <% place_n = 'wagon_' + place.to_s %>
    <%= form.text_field  place, id: place_n.to_sym %>
  <% end %>    
  </div>


  <div class="field">
  <%= form.label :type %>
  <% Wagon::TYPE_WAGON.each do |type| %>   
   <%= form.radio_button(:type, type, checked: true) %>
   <% type_n = type.downcase.sub('Wagon', '').to_sym %>
   <%= label_tag(type_n, type) %>
  <% end %>
  </div>

   <div class="field">
    <%= form.label :train, 'Выбрать поезд' %>
    <%= form.collection_select :train_id, Train.all, :id, :number, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit "#{ @wagon.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
